{
  "manifest_version": 3,
  "name": "Claude Usage Monitor",
  "version": "1.6",
  "description": "Monitor Claude AI usage across accounts - auto-saves to ~/.claude-monitor",
  "key": "",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://claude.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Usage Monitor"
  },
  "content_scripts": [
    {
      "matches": ["*://claude.ai/settings/usage*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
